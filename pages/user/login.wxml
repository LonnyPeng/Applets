<view class='login-box'>
  <view class='title'>
    <text>登 陆</text>
  </view>
  <view class='form'>
    <form bindsubmit='loginForm'>
      <view class='row'>
        <input placeholder='输入用户名' type='text' name='username' value='' />
        <icon class='none' id='username-ok' type='success' size='20' />
        <icon class='none' id='username-error' type='warn' size='20' />
      </view>

      <view class='row'>
        <input placeholder='输入密码' type='password' name='password' value='' />
        <icon class='none' id='password-ok' type='success' size='20' />
        <icon class='none' id='password-error' type='warn' size='20' />
      </view>

      <view class='row'>
        <button formType="submit">确认登陆</button>
      </view>
    </form>
  </view>
</view>